    <logger name="ch.usi.dslab.lel.ChirperServerHybrid" additivity="false">
        <level value="error"/>
        <!--<appender-ref ref="server_out"/>-->
        <appender-ref ref="console"/>
    </logger>
    <logger name="ch.usi.dslab.lel.dynastar.OracleStateMachineDSSMR" additivity="false">
        <level value="debug"/>
        <!--<appender-ref ref="oracle_out"/>-->
        <appender-ref ref="console"/>
    </logger>

    <logger name="ch.usi.dslab.lel.dynastar.MetisPartitioning" additivity="false">
        <level value="debug"/>
        <appender-ref ref="console"/>
    </logger>


    <logger name="ch.usi.dslab.bezerra.sense.DataGatherer" additivity="false">
        <level value="info"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="ch.usi.da.paxos.*" additivity="false">
        <level value="error"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="ch.usi.dslab.bezerra.mcad.ridge.*" additivity="false">
        <level value="error"/>
        <appender-ref ref="console"/>
    </logger>

    <root>
