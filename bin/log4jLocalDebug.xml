<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%r [%-5p] [%X{ROLE}] - %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="levelMin" value="DEBUG"/>
        </filter>
    </appender>

    <appender name="client_out" class="org.apache.log4j.FileAppender">
        <param name="file" value="/Users/longle/Dropbox/Workspace/PhD/ScalableSMR/chirper/bin/debug/client-${env:HOSTNAME}.out"/>
        <param name="immediateFlush" value="true"/>
        <param name="threshold" value="debug"/>
        <param name="append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%r [%-5p] [%X{ROLE}] - %m%n"/>
        </layout>
    </appender>


    <appender name="server_out" class="org.apache.log4j.FileAppender">
        <param name="file" value="/Users/longle/Dropbox/Workspace/PhD/ScalableSMR/chirper/bin/debug/server-${env:HOSTNAME}.out"/>
        <param name="immediateFlush" value="true"/>
        <param name="threshold" value="debug"/>
        <param name="append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%r [%-5p] [%X{ROLE}] - %m%n"/>
        </layout>
    </appender>

    <appender name="oracle_out" class="org.apache.log4j.FileAppender">
        <param name="file" value="/Users/longle/Dropbox/Workspace/PhD/ScalableSMR/chirper/bin/debug/oracle-${env:HOSTNAME}.out"/>
        <param name="immediateFlush" value="true"/>
        <param name="threshold" value="debug"/>
        <param name="append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%r [%-5p] [%X{ROLE}] - %m%n"/>
        </layout>
    </appender>

    <logger name="ch.usi.dslab.bezerra.dynastar.client.ClientAsync" additivity="false">
        <level value="error"/>
        <appender-ref ref="console"/>
    </logger>
    <logger name="ch.usi.dslab.lel.dynastar.client.ClientDynaStar" additivity="false">
        <level value="debug"/>
        <!--<appender-ref ref="client_out"/>-->
        <appender-ref ref="console"/>
    </logger>

    <logger name="ch.usi.dslab.lel.dynastar.StateMachine" additivity="false">
        <level value="debug"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="ch.usi.dslab.lel.dynastar.PartitionStateMachine" additivity="false">
        <level value="debug"/>
        <!--<appender-ref ref="server_out"/>-->
        <appender-ref ref="console"/>
    </logger>


    <logger name="ch.usi.dslab.lel.dynastar.OracleStateMachine" additivity="false">
        <level value="debug"/>
        <!--<appender-ref ref="oracle_out"/>-->
        <appender-ref ref="console"/>
    </logger>

    <logger name="ch.usi.dslab.lel.dynastar.client.ClientDSSMR" additivity="false">
        <level value="debug"/>
        <appender-ref ref="console"/>
    </logger>
    <logger name="ch.usi.dslab.lel.dynastar.PartitionStateMachineDSSMR" additivity="false">
        <level value="debug"/>
        <!--<appender-ref ref="server_out"/>-->
        <appender-ref ref="console"/>
    </logger>
    <logger name="ch.usi.dslab.lel.dynastar.client.ClientDynastarHybrid" additivity="false">
        <level value="debug"/>
        <appender-ref ref="console"/>
