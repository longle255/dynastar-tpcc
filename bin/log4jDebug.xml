<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%r [%-5p] [%X{ROLE}] - %m%n"/>
            <!--<param name="ConversionPattern" value="[%p] %d{HH:mm:ss,SSS} %c %M - %m%n"/>-->
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="levelMin" value="DEBUG"/>
            <!-- <param name="levelMax" value="DEBUG" /> -->
        </filter>
    </appender>

    <appender name="client_out" class="org.apache.log4j.FileAppender">
        <param name="file" value="/home/long/apps/ScalableSMR/dynastarTPCC/log/debug/client-${HOSTNAME}.out"/>
        <param name="immediateFlush" value="true"/>
        <param name="threshold" value="debug"/>
        <param name="append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="conversionPattern" value="%d{HH:mm:ss.SSS} [%-5p] - %m%n"/>
        </layout>
    </appender>

    <appender name="server_out" class="org.apache.log4j.FileAppender">
        <param name="file" value="/home/long/apps/ScalableSMR/dynastarTPCC/log/debug/server-${HOSTNAME}.out"/>
        <param name="immediateFlush" value="true"/>
        <param name="threshold" value="debug"/>
        <param name="append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="conversionPattern" value="%d{HH:mm:ss.SSS} [%-5p] - %m%n"/>
        </layout>
    </appender>

    <appender name="oracle_out" class="org.apache.log4j.FileAppender">
        <param name="file" value="/home/long/apps/ScalableSMR/dynastarTPCC/log/debug/oracle-${HOSTNAME}.out"/>
        <param name="immediateFlush" value="true"/>
        <param name="threshold" value="debug"/>
        <param name="append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="conversionPattern" value="%d{HH:mm:ss.SSS} [%-5p] - %m%n"/>
        </layout>
    </appender>

    <logger name="ch.usi.dslab.lel.dynastarv2.Client" additivity="false">
        <level value="debug"/>
        <appender-ref ref="client_out"/>
    </logger>

    <logger name="ch.usi.dslab.lel.dynastarv2.PartitionStateMachine" additivity="false">
        <level value="debug"/>
        <appender-ref ref="server_out"/>
    </logger>

    <logger name="ch.usi.dslab.lel.dynastarv2.OracleStateMachine" additivity="false">
        <level value="debug"/>
        <appender-ref ref="oracle_out"/>
    </logger>
    <logger name="ch.usi.dslab.bezerra.sense.DataGatherer" additivity="false">
        <level value="info"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="ch.usi.dslab.lel.dynastar.tpcc.TpccClient" additivity="false">
        <level value="debug"/>
        <appender-ref ref="client_out"/>
    </logger>

    <logger name="ch.usi.dslab.lel.dynastar.tpcc.TpccServer" additivity="false">
        <level value="debug"/>
        <appender-ref ref="server_out"/>
    </logger>

    <logger name="ch.usi.da.paxos.*" additivity="false">
        <level value="error"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="ch.usi.dslab.bezerra.mcad.ridge.*" additivity="false">
        <level value="error"/>
        <appender-ref ref="console"/>
    </logger>

    <root>
        <priority value="error"/>
        <appender-ref ref="console"/>
    </root>

</log4j:configuration>
